<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_translate">

    <fragment
        android:id="@+id/navigation_translate"
        android:name="com.kelompok11.deepl.TranslateFragment"
        android:label="@string/translate"
        tools:layout="@layout/fragment_translate">
        <action
            android:id="@+id/action_home_to_usage"
            app:destination="@id/navigation_usage" />
    </fragment>

    <fragment
        android:id="@+id/navigation_usage"
        android:name="com.kelompok11.deepl.UsageFragment"
        android:label="@string/usage"
        tools:layout="@layout/fragment_usage" />
</navigation>
